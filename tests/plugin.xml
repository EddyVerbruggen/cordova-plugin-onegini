<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-onegini-tests"
        version="1.0.0">

  <name>Cordova Onegini Plugin Tests</name>
  <js-module src="tests.js" name="tests" />

  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <content src="cdvtests/index.html" />
      <feature name="OneginiUrlClient">
        <param name="ios-package" value="OGCDVUrlClient" />
        <param name="onload" value="true" />
      </feature>
    </config-file>

    <header-file src="src/ios/classes/OGCDVUrlClient.h"/>
    <source-file src="src/ios/classes/OGCDVUrlClient.m"/>
  </platform>

  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <content src="cdvtests/index.html" />
      <feature name="OneginiUrlClient">
        <param name="android-package" value="com.onegini.tests.OneginiUrlClient"/>
        <param name="onload" value="true"/>
      </feature>
    </config-file>

    <source-file src="src/android/classes/OneginiUrlClient.java"
                 target-dir="src/com/onegini/tests"/>
    <source-file src="src/android/classes/UrlHandler.java"
                 target-dir="src/com/onegini/tests"/>
  </platform>
</plugin>